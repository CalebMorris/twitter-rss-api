{
  "name": "twitterRss",
  "version": "0.2.0",
  "description": "Rss generator for components of twitter streams.",
  "main": "./dist/twitter-rss-api.js",
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "start": "./node_modules/.bin/nf start web",
    "dev": "./node_modules/.bin/nodemon -e js -i node_modules -x 'npm run start'",
    "test": "echo \"Error: no test specified\" && exit 1",
    "copy-templates": "cp -R ./lib/view/templates ./dist/view/",
    "build": "tsc && npm run copy-templates",
    "build-release": "npm run clean && npm run build && npm run lint-quiet",
    "clean": "rm -Rf ./dist",
    "lint": "eslint . --ext .ts",
    "lint-quiet": "eslint . --ext .ts --quiet"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@hapi/hapi": "^20.1.0",
    "confidence": "^4.0.2",
    "htmlencode": "0.0.4",
    "install": "^0.13.0",
    "joi": "^17.4.0",
    "lodash": "^4.17.15",
    "mustache": "^4.0.1",
    "rss": "^1.2.2",
    "twitter-app-api": "^0.4.1"
  },
  "devDependencies": {
    "@types/hapi__hapi": "^20.0.5",
    "@types/lodash": "^4.14.168",
    "@types/mustache": "^4.1.1",
    "@types/node": "^14.14.32",
    "@types/rss": "0.0.28",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "eslint": "^7.21.0",
    "foreman": "^3.0.1",
    "nodemon": "^2.0.4",
    "twitter-d": "^0.4.0",
    "typescript": "^4.2.3"
  }
}
