
{{#MediaItems}}
  {{#MediaPhoto}}
  <div class="tweet-media tweet-photo">
    <a href="{{{url}}}">
      <img src="{{{url}}}"></img>
    </a>
  </div>
  {{/MediaPhoto}}

  {{#MediaVideo}}
  <div class="tweet-media tweet-video">
    <video controls="controls" poster="{{{poster}}}">
      {{#sources}}
        <source src="{{{url}}}" type="{{contentType}}">
      {{/sources}}

      Your browser does not support the HTML5 Video element.
    </video>
  </div>
  {{/MediaVideo}}

  {{#MediaAnimatedGif}}
  <div class="tweet-media tweet-animated-gif">
    <video autoplay="true" loop="true" muted="true" poster="{{poster}}">
      {{#sources}}
        <source src="{{{url}}}" type="{{contentType}}">
      {{/sources}}

      Your browser does not support the HTML5 Video element.
    </video>
  </div>
  {{/MediaAnimatedGif}}
{{/MediaItems}}